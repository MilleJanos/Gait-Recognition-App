<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="0dp"
        android:background="@color/white_alpha_color_99">

        <android.support.constraint.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorBlue"
                android:orientation="vertical"
                card_view:layout_constraintBottom_toBottomOf="@+id/imageView3"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/question_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="18dp"
                    android:text="Question"
                    android:fontFamily="@font/alef"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/answer_textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="left"
                    android:lines="6"
                    android:maxLines="6"
                    android:textColor="@color/colorGray9"
                    android:text="Answer: Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                    android:textSize="10sp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="97dp"
                android:layout_height="27dp"
                android:src="@drawable/ic_bubble"
                android:tint="@color/colorBlue4"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="@+id/linearLayout4" />

            <TextView
                android:id="@+id/question_id_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q0000"
                android:textSize="10sp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/alef"
                card_view:layout_constraintBottom_toBottomOf="@+id/imageView3"
                card_view:layout_constraintEnd_toEndOf="@+id/imageView3"
                card_view:layout_constraintStart_toStartOf="@+id/imageView3"
                card_view:layout_constraintTop_toTopOf="@+id/imageView3" />




        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>