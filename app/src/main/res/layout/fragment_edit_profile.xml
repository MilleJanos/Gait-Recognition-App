<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="26dp"
                android:background="@color/white_alpha_color_99"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="26dp"
                android:fontFamily="@font/aldrich"
                android:text="Edit you personal data:"
                android:textAlignment="textStart"
                android:textColor="@color/colorGray9"
                android:textSize="18dp" />

            <!-- Email -->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:text="First name:"
                android:textAlignment="center"
                android:textColor="@color/colorGray9"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/first_name_textview"
                android:layout_width="wrap_content"
                android:minWidth="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="26dp"
                android:singleLine="true"
                android:lines="1"
                android:maxLines="1"
                android:scrollHorizontally="false"
                android:importantForAutofill="auto"
                android:textColorHint="@color/colorGray2"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/aldrich"
                android:drawableLeft="@drawable/ic_profile"
                android:drawableTint="@color/colorBlack"
                android:drawablePadding="5dp"
                android:layout_height="wrap_content" />



            <!-- Email -->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:text="Last name:"
                android:textAlignment="center"
                android:textColor="@color/colorGray9"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/last_name_textview"
                android:layout_width="wrap_content"
                android:minWidth="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="26dp"
                android:singleLine="true"
                android:lines="1"
                android:maxLines="1"
                android:scrollHorizontally="false"
                android:importantForAutofill="auto"
                android:textColorHint="@color/colorGray2"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/aldrich"
                android:drawableLeft="@drawable/ic_profile"
                android:drawableTint="@color/colorBlack"
                android:drawablePadding="5dp"
                android:layout_height="wrap_content" />



            <!-- Phone number -->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:text="Phone number:"
                android:textAlignment="center"
                android:textColor="@color/colorGray9"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/phone_number_textview"
                android:layout_width="wrap_content"
                android:minWidth="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="26dp"
                android:singleLine="true"
                android:lines="1"
                android:maxLines="1"
                android:scrollHorizontally="false"
                android:importantForAutofill="auto"
                android:textColorHint="@color/colorGray2"
                android:textColor="@color/colorWhite"
                android:drawableStart="@drawable/ic_phone"
                android:foregroundTint="@color/colorBlue5"
                android:fontFamily="@font/aldrich"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawableTint="@color/colorBlack"
                android:drawablePadding="5dp"
                android:layout_height="wrap_content" />

            <!-- Birth date -->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:text="Birth date:"
                android:textAlignment="center"
                android:textColor="@color/colorGray9"
                android:textSize="18dp" />

            <DatePicker
                android:id="@+id/birth_date_datepicker"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:spinnersShown="true"            />


        </LinearLayout>

    <!-- Buttons -->

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_selector"
            android:fontFamily="@font/aldrich"
            android:minWidth="150dp"
            android:shadowRadius="@android:integer/config_longAnimTime"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_selector"
            android:fontFamily="@font/aldrich"
            android:minWidth="150dp"
            android:shadowRadius="@android:integer/config_longAnimTime"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




    </LinearLayout>

</ScrollView>